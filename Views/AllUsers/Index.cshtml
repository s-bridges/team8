                        </th>
                        <th>
                            <label class="control-label">Last Name</label>
                        </th>
                        <th>
                            <label class="control-label">Address</label>
                        </th>
                        <th>
                            <label class="control-label">City</label>
                        </th>
                        <th>
                            <label class="control-label">State</label>
                        </th>
                        <th>
                            <label class="control-label">Zipcode</label>
                        </th>
                        <th>
                            <label class="control-label">Phone Number</label>
                        </th>
                        <th>
                            <label class="control-label">Job title</label>
                        </th>
                        <th>
                            <label class="control-label">Username</label>
                        </th>
                        <th>
                            <label class="control-label">Password</label>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model._lstOps)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerFirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerLastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerCity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerState)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerZipcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerPhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerUserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpsManagerPassword)
                            </td>


                        </tr>
                    }

                </tbody>
            </table>
        }
    </div>
</div>
<div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
