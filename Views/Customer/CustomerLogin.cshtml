@model team8.Models.Customer
@{
    ViewData["Title"] = "CustomerLogin";
}

<h2>CustomerLogin</h2>

<div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CustomerLogin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CustomerUserName" class="control-label"></label>
                <input asp-for="CustomerUserName" class="form-control" />
                <span asp-validation-for="CustomerUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPassword" class="control-label"></label>
                <input asp-for="CustomerPassword" class="form-control" />
                <span asp-validation-for="CustomerPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
                <a asp-controller="Customer" asp-action="Create">Create New User</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
