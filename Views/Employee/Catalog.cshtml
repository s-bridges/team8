@model IEnumerable<team8.Models.Catalog>




@{
    ViewData["Title"] = "Catalog";
}

<h2>Product Catalog</h2>
<h4>All Products</h4>

<div>
    <a asp-controller="Employee" asp-action="CatalogCreate">New Catalog Entry</a>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemPhoto)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ItemPrice)
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>

                    <td>
                        <img src="@item.ItemPhoto" height="120" width="120" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ItemPrice)
                    </td>

                    <td>
                        <a asp-controller="Employee" asp-action="CatalogDetails" asp-route-CatalogID="@item.CatalogID">Product Details</a>
                        <a asp-controller="Employee" asp-action="CatalogEdit" asp-route-CatalogID="@item.CatalogID">Edit Catalog Item</a>
                        <a asp-controller="Employee" asp-action="CatalogDelete" asp-route-CatalogID="@item.CatalogID">Delete Catalog Item</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}