@model team8.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<h4>Credit Cards</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CardID" />
            <input type="hidden" asp-for="CustomerID" />
            <div class="form-group">
                <label asp-for="BillingAddress" class="control-label"></label>
                <input asp-for="BillingAddress" class="form-control" />
                <span asp-validation-for="BillingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingCity" class="control-label"></label>
                <input asp-for="BillingCity" class="form-control" />
                <span asp-validation-for="BillingCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingSTate" class="control-label"></label>
                <input asp-for="BillingSTate" class="form-control" />
                <span asp-validation-for="BillingSTate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingZipcode" class="control-label"></label>
                <input asp-for="BillingZipcode" class="form-control" />
                <span asp-validation-for="BillingZipcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardType" class="control-label"></label>
                <input asp-for="CardType" class="form-control" />
                <span asp-validation-for="CardType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardExpDate" class="control-label"></label>
                <input asp-for="CardExpDate" class="form-control" />
                <span asp-validation-for="CardExpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardCVV" class="control-label"></label>
                <input asp-for="CardCVV" class="form-control" />
                <span asp-validation-for="CardCVV" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-route-CustomerID="@Model.CustomerID">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 